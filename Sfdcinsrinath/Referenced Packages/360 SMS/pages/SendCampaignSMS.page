                   if(nonGsmLength <= 70){
                       segment = 1;
                     }
                     else{
                        if(nonGsmLength%67 == 0)
                            segment = (nonGsmLength/67);
                        else
                            segment = (nonGsmLength/67)+1;
                        }       
                }       
                
